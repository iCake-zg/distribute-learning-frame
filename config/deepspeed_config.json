{
  "train_batch_size": 192,
  "train_micro_batch_size_per_gpu": 16,
  "gradient_accumulation_steps": 2,
  
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.001,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 0
    }
  },
  
  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 0.001,
      "warmup_num_steps": 10
    }
  },
  
  "fp16": {
    "enabled": false
  },
  
  "zero_optimization": {
    "stage": 1,
    "allgather_partitions": true,
    "allgather_bucket_size": 2e8,
    "overlap_comm": true,
    "reduce_scatter": true,
    "reduce_bucket_size": 2e8,
    "contiguous_gradients": true
  },
  
  "wall_clock_breakdown": false,
  "steps_per_print": 5
}